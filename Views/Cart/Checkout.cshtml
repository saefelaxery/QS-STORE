@model LaLaStore.Models.Order
@{
    ViewData["Title"] = "Checkout";
    var totalPrice = ViewBag.TotalPrice as decimal? ?? 0;
}

<div class="container my-5">
    <h1 class="mb-4">Checkout - إتمام الطلب</h1>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Customer Information - معلومات العميل</h5>
                    <form asp-action="Checkout" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="CustomerName" class="form-label">Full Name - الاسم الكامل</label>
                            <input asp-for="CustomerName" class="form-control" required />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email - البريد الإلكتروني</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone - الهاتف</label>
                            <input asp-for="Phone" class="form-control" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address - العنوان</label>
                            <textarea asp-for="Address" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Payment Method - طريقة الدفع</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="CashOnDelivery" checked />
                                <label class="form-check-label">
                                    Cash on Delivery - الدفع عند الاستلام
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="Visa" />
                                <label class="form-check-label">
                                    Visa / Credit Card - فيزا / كريدت كارد
                                </label>
                            </div>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div id="visa-details" class="mb-3" style="display:none;">
                            <h6 class="mb-3">Card Details - بيانات الكارت</h6>
                            <div class="mb-2">
                                <label class="form-label">Card Number - رقم الكارت</label>
                                <input type="text" class="form-control" name="CardNumber" maxlength="19" placeholder="**** **** **** ****" />
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label class="form-label">Expiry - تاريخ الانتهاء</label>
                                    <input type="text" class="form-control" name="CardExpiry" placeholder="MM/YY" maxlength="5" />
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label class="form-label">CVV</label>
                                    <input type="password" class="form-control" name="CardCvv" maxlength="4" />
                                </div>
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Name on Card - اسم صاحب الكارت</label>
                                <input type="text" class="form-control" name="CardHolderName" />
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Place Order - تأكيد الطلب
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel - إلغاء</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Order Summary - ملخص الطلب</h5>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Total:</span>
                        <strong class="text-primary fs-5">@totalPrice.ToString("N0") EGP</strong>
                    </div>
                    <hr>
                    <p class="text-muted small">
                        <i class="bi bi-info-circle"></i> Your order will be processed and you will receive a confirmation.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        (function () {
            function toggleVisaDetails() {
                var selected = document.querySelector('input[name="PaymentMethod"]:checked');
                var visaSection = document.getElementById('visa-details');
                if (!selected || !visaSection) return;

                if (selected.value === 'Visa') {
                    visaSection.style.display = 'block';
                } else {
                    visaSection.style.display = 'none';
                }
            }

            document.addEventListener('change', function (e) {
                if (e.target && e.target.name === 'PaymentMethod') {
                    toggleVisaDetails();
                }
            });

            // initial
            toggleVisaDetails();
        })();
    </script>
}



