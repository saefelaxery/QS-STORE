@model List<LaLaStore.Models.Product>
@{
    ViewData["Title"] = "Products";
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var selectedCategory = ViewBag.SelectedCategory as string ?? "todos";
}

<div class="container my-5">
    <div class="mb-4">
        <h1 class="fw-bold">Our Products</h1>
        <p class="text-muted">Explore our wide selection of clothing and accessories</p>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-8">
                    <input type="text" id="searchInput" class="form-control" placeholder="Search products...">
                </div>
                <div class="col-md-4">
                    <div class="btn-group w-100" role="group">
                        <a asp-action="Index" asp-route-categoria="todos" 
                           class="btn @(selectedCategory == "todos" ? "btn-primary" : "btn-outline-primary")">
                            All
                        </a>
                        @foreach (var category in categories)
                        {
                            var lower = category.ToLower();
                            var displayName = lower == "men"
                                ? "Men"
                                : lower == "women"
                                    ? "Women"
                                    : lower == "kids"
                                        ? "Kids"
                                        : category;
                            <a asp-action="Index" asp-route-categoria="@category" 
                               class="btn @(selectedCategory == category ? "btn-primary" : "btn-outline-primary")">
                                @displayName
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    <div class="mb-3">
        <p class="text-muted" id="resultsCount">@Model.Count product(s) found</p>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-search" style="font-size: 4rem; color: #ccc;"></i>
            <p class="text-muted mt-3">No products found</p>
        </div>
    }
    else
    {
        <div class="row g-4" id="productsGrid">
            @foreach (var product in Model)
            {
                <div class="col-md-6 col-lg-3 product-item" data-name="@product.Name.ToLower()" data-description="@product.Description.ToLower()">
                    <div class="card h-100 border-0 shadow-sm hover-shadow">
                        <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title text-dark">@product.Name</h5>
                                <p class="card-text text-muted small">@(product.Description.Length > 60 ? product.Description.Substring(0, 60) + "..." : product.Description)</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-primary mb-0">@product.Price.ToString("N0") EGP</span>
                                    @if (product.Rating.HasValue)
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-star-fill text-warning"></i> @product.Rating.Value.ToString("F1")
                                        </small>
                                    }
                                </div>
                                @if (!product.InStock)
                                {
                                    <span class="badge bg-danger mt-2">Out of Stock</span>
                                }
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const items = document.querySelectorAll('.product-item');
            let visibleCount = 0;

            items.forEach(item => {
                const name = item.dataset.name;
                const description = item.dataset.description;
                const matches = name.includes(searchTerm) || description.includes(searchTerm);
                
                if (matches) {
                    item.style.display = '';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });

            document.getElementById('resultsCount').textContent = visibleCount + ' product(s) found';
        });
    </script>
}

<style>
    .hover-shadow {
        transition: transform 0.3s, box-shadow 0.3s;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
    }
</style>

